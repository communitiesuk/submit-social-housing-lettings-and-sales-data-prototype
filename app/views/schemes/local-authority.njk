{% extends "layouts/question.njk" %}

{% set title = "Do you know what local authority this scheme operates in?" %}
{% if scheme["local-authority-known"] %}
  {# Editing an existing scheme #}
  {% set caption = scheme.name %}
  {# {% set buttonText = "Save changes" %}
  {% set formAction = schemePath %} #}
{% endif %}

{% block question %}
  {{ govukRadios(decorate({
    fieldset: {
      legend: {
        text: macro.heading(title, caption)
      }
    },
    items: [{
      text: "Yes",
      value: "true",
      conditional: {
        html: rigAutocomplete(decorate({
          label: {
            text: "Select a local authority"
          },
          items: data.questions["local-authorities"]
        }, ["schemes", scheme.id, "local-authority"]))
      }
    }, {
      text: "No",
      value: "false"
    }]
  }, ["schemes", scheme.id, "local-authority-known"])) }}
{% endblock %}
