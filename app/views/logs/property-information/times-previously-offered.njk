{% extends "layouts/question.njk" %}

{% set isRelet = log[section.id]["is-relet"] %}
{% if isRelet == "true" %}
  {% set title = "How many times has the property been previously offered since becoming available for re-let?" %}
{% else %}
  {% set title = "How many times has the property been previously offered since becoming available?" %}
{% endif %}

{% set hint = "If the property is being let for the first time, enter 0." %}

{% block question %}
  {{ govukInput(decorate({
    classes: "govuk-input--width-2",
    label: {
      html: macro.heading(title)
    },
    hint: {
      text: hint
    },
    inputmode: "numeric",
    pattern: "[0-9]*"
  }, ["logs", log.id, section.id, "times-previously-offered"])) }}
{% endblock %}
