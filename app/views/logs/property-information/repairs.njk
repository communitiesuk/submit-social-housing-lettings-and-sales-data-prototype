{% extends "layouts/question.njk" %}

{% set title = "Were any major repairs carried out during the void period?" %}

{% block question %}
  {% set dateHtml %}
  {{ govukDateInput(decorate({
    fieldset: {
      legend: {
        text: "When were the repairs completed?"
      }
    },
    hint: {
      text: "For example, 12 11 2020"
    },
    items: data.questions["date-full"]
  }, ["logs", log.id, section.id, "repairs-date"])) }}
  {% endset %}

  {{ govukRadios(decorate({
    fieldset: {
      legend: {
        text: macro.heading(title)
      }
    },
    items: [
      {
        text: "Yes",
        value: "true",
        conditional: {
          html: dateHtml
        }
      },
      {
        text: "No",
        value: "false"
      }
    ]
  }, ["logs", log.id, section.id, "repairs"])) }}
{% endblock %}
