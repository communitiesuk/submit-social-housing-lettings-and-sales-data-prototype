{% block checkAnswers %}

  {% if isSupportedHousing and not isRenewal %}
    {{ govukSummaryList({
      rows: [
        propertyReferenceRow,
        postcodeRow,
        localAuthorityKnownRow,
        localAuthorityRow,
        reasonForNotKnowingRow,
        isReletRow,
        typeOfLetRow,
        reasonForVacancyNonReletRow,
        reasonForVacancyRow,
        typeOfUnit,
