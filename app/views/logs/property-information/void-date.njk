{% extends "layouts/question.njk" %}

{% set isNewprop = log[section.id]["reason-for-vacancy"] == "newprop" %}
{% if isNewprop %}
  {% set title = "What is the new-build handover date?" %}
{% else %}
  {% set title = "What is the void or renewal date?" %}
{% endif %}
{% set questionId = "void-date" %}

{% block question %}
  {{ govukDateInput({
    decorate: ["logs", log.id, section.id, questionId],
    fieldset: {
      legend: {
        text: macro.heading(title, caption)
      }
    },
    hint: {
      text: "For example, 12 11 2020."
    },
    items: data.questions["date-full"]
  }) }}
{% endblock %}
