      value: "Lifetime private registered provider (PRP) general needs tenancy"
    }, {
      text: "Sheltered accommodation",
      value: "Sheltered accommodation"
    } if data.features["2022-23"].on != true, {
      text: "Specialist retirement housing",
      value: "Specialist retirement housing"
    } if data.features["2022-23"].on == true, {
      text: "Supported housing",
      value: "Supported housing"
    } if data.features["2022-23"].on != true, {
      text: "Other supported housing",
      value: "Other supported housing"
    } if data.features["2022-23"].on == true, {
      text: "Private sector tenancy",
      value: "Private sector tenancy"
    } if data.features["2022-23"].on != true, {
      divider: " "
    }, {
      text: "Living with friends or family",
      value: "Living with friends or family"
    }, {
      text: "Owner occupation (low-cost home ownership)",
      value: "Owner occupation (low-cost home ownership)"
    }, {
      text: "Owner occupation (private)",
      value: "Owner occupation (private)"
