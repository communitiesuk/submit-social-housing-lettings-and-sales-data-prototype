      text: "Hospital",
      value: "Hospital"
    }, {
      text: "Prison or approved probation hostel",
      value: "Prison or approved probation hostel"
    }, {
      text: "Rough sleeping",
      value: "Rough sleeping"
    }, {
      text: "Other temporary accommodation",
      value: "Other temporary accommodation"
    }, {
      divider: " "
    }, {
      text: "Children’s home or foster care",
      value: "Children’s home or foster care"
    }, {
      text: "Home Office asylum support",
      value: "Home Office asylum support"
    }, {
