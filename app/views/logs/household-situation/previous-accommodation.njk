    }, {
      text: "Tied housing or rented with job",
      value: "Tied housing or rented with job"
    }, {
      text: "Other accommodation",
      value: "Other accommodation"
    }]
  }, ["logs", log.id, section.id, questionId])) }}
{% endblock %}
