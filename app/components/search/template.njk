{% from "govuk/components/input/macro.njk" import govukInput %}

<div class="app-search">
  {{ govukInput(decorate({
    id: params.id,
    name: params.name,
    type: "search",
    items: items,
    describedBy: params.describedBy,
    label: params.label,
    hint: params.hint,
    errorMessage: params.errorMessage,
    formGroup: params.formGroup,
    classes: "app-search__input " + params.classes,
    attributes: params.attributes
  }, params.decorate)) }}
  <svg class="app-search__icon" width="20" height="20" viewBox="0 0 27 27" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false">
    <circle cx="12.0161" cy="11.0161" r="8.51613" stroke="currentColor" stroke-width="3"></circle>
    <line x1="17.8668" y1="17.3587" x2="26.4475" y2="25.9393" stroke="currentColor" stroke-width="3"></line>
  </svg>
</div>
